<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alejandria.Project1_tempconverter.TempConverterActivity">

    <TextView
        android:id="@+id/degreesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Degrees"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/farenheitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/degreesLabel"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="28dp"
        android:layout_toStartOf="@+id/degreesLabel"
        android:text="Farenheit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/farenheitEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/farenheitLabel"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text="100" />

    <TextView
        android:id="@+id/celciusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/farenheitLabel"
        android:layout_below="@+id/farenheitLabel"
        android:layout_marginTop="47dp"
        android:text="Celcius"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/celciusresultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/celciusLabel"
        android:layout_alignStart="@+id/farenheitEditText"
        android:text="37"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="37.778" />
</RelativeLayout>
